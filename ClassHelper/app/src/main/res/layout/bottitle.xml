<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_black_1">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/select_people"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/select_people"
            android:layout_weight="2"
            android:id="@+id/select_people_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="人员管理"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/select_function"
    >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/select_function"
            android:layout_weight="2"
            android:id="@+id/select_function_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="功能使用"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/select_score"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:layout_marginTop="3dp"
        android:src="@drawable/select_score"
        android:layout_weight="2"
        android:id="@+id/select_score_img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="成绩单管理"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp"
        />
</LinearLayout>

</LinearLayout>